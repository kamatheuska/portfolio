{
  "name": "react-projects",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.3.0",
    "@reach/router": "^1.3.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "bulma": "^0.9.3",
    "dompurify": "^2.3.2",
    "marked": "^3.0.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "build": "craco build",
    "build:local": "craco build",
    "prebuild": "npm run lint && CI=true npm test",
    "deploy": "npm run build && surge build",
    "eject": "react-scripts eject",
    "start": "craco start",
    "test": "craco test",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "node-sass": "^6.0.1",
    "prettier": "^2.4.1",
    "surge": "^0.23.0"
  },
  "jest": {
    "moduleNameMapper": {
      "^~constants/(.*)": "<rootDir>/src/constants/$1",
      "^~utils/(.*)$": "<rootDir>/src/utils/$1",
      "^~assets/(.*)": "<rootDir>/src/assets/$1",
      "^~projects/(.*)": "<rootDir>/src/projects/$1",
      "^~components/(.*)": "<rootDir>/src/components/$1"
    },
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  }
}
