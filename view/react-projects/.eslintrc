{
  "extends": ["react-app", "plugin:prettier/recommended"],

  "rules": {
    "quotes": ["error", "single"],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "printWidth": 120
      }
    ]
  },
  "parserOptions": {
    "ecmaVersion": 2020
  },

  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
